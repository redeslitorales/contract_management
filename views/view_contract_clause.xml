<odoo>
    <record id="view_contract_clause_form" model="ir.ui.view">
        <field name="name">contract.clause.form</field>
        <field name="model">contract.clause</field>
        <field name="arch" type="xml">
            <form string="Contract Clause">
                <sheet>
                    <group>
                        <field name="version" readonly="1" />
                        <field name="name"/>
                        <field name="clause"/>
                        <field name="friendly_clause"/>
                        <field name="contract_template_ids" widget="many2many_tags"/>
                        <field name="sequence"/>
                        <field name="active"/>
                        <field name="inactive_date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_contract_clause_tree" model="ir.ui.view">
        <field name="name">contract.clause.tree</field>
        <field name="model">contract.clause</field>
        <field name="arch" type="xml">
            <tree string="Contract Clauses">
                <field name="active"/>
                <field name="name"/>
                <field name="clause"/>
                <field name="sequence"/>
            </tree>
        </field>
    </record>
</odoo>