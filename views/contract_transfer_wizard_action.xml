<odoo>
    <data noupdate="1">
        <!-- Define the server action -->
        <record id="action_subscription_transfer_wizard" model="ir.actions.server">
            <field name="name">Subscription Transfer Wizard</field>
            <field name="model_id" ref="model_subscription_transfer_wizard"/>
            <field name="binding_model_id" ref="model_sale_order"/>
            <field name="state">code</field>
            <field name="code">
                action = {
                    'type': 'ir.actions.act_window',
                    'res_model': 'subscription.transfer.wizard',
                    'view_mode': 'form',
                    'target': 'new',
                    'context': {
                        'default_from_subscription_id': record and record.id or False,
                    },
                }
            </field>
        </record>
    </data>
</odoo>