<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_subscription_transfer_wizard_form" model="ir.ui.view">
        <field name="name">subscription.transfer.wizard.form</field>
        <field name="model">subscription.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Subscription Transfer Wizard">
                <group>
                    <field name="subscription_id"/>
                    <field name="new_customer_id"/>
                    <field name="transfer_date"/>
                    <field name="transfer_reason"/>
                </group>
                <footer>
                    <button string="Transfer" type="object" name="transfer_subscription" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>