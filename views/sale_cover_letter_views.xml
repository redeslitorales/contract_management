<odoo>
    <record id="view_sale_cover_letter_form" model="ir.ui.view">
        <field name="name">sale.cover.letter.form</field>
        <field name="model">sale.cover.letter</field>
        <field name="arch" type="xml">
            <form string="Cover Letter">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_category_id"/>
                        <field name="cover_letter" widget="html"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sale_cover_letter_tree" model="ir.ui.view">
        <field name="name">sale.cover.letter.tree</field>
        <field name="model">sale.cover.letter</field>
        <field name="arch" type="xml">
            <tree string="Cover Letters">
                <field name="name"/>
                <field name="product_category_id"/>
            </tree>
        </field>
    </record>
</odoo>