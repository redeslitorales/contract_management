<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_subscription_button_visibility" model="ir.ui.view">
        <field name="name">sale.subscription.order.button.visibility</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <!-- Hide action_quotation_send button when state is sale or cancel -->
            <xpath expr="//form[1]/header[1]/button[@name='action_quotation_send'][2]" position="attributes">
                <attribute name="invisible">state in ["sale", "cancel"]</attribute>
            </xpath>
            
            <!-- Hide action_preview_sale_order button -->
            <xpath expr="//button[@name='action_preview_sale_order']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>
</odoo>
