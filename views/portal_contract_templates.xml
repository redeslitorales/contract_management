<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Portal: Contract Details View -->
    <template id="portal_my_contract" name="Portal My Contract">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            <t t-call="portal.portal_searchbar">
                <t t-set="title">Contract Details</t>
            </t>
            
            <div class="container my-4">
                <div class="row">
                    <div class="col-12">
                        <div class="card shadow-sm">
                            <div class="card-header bg-primary text-white">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="mb-0">
                                        <i class="fa fa-file-text-o me-2"/>
                                        Contract: <t t-esc="contract.name"/>
                                    </h4>
                                    <a href="/my/services" class="btn btn-sm btn-light">
                                        <i class="fa fa-arrow-left"/> Back to Services
                                    </a>
                                </div>
                            </div>
                            
                            <div class="card-body">
                                <!-- Contract Information -->
                                <div class="row mb-4">
                                    <div class="col-md-6">
                                        <h5 class="text-primary mb-3">Contract Information</h5>
                                        <table class="table table-sm">
                                            <tr>
                                                <td class="text-muted"><strong>Contract Number:</strong></td>
                                                <td><t t-esc="contract.name"/></td>
                                            </tr>
                                            <tr>
                                                <td class="text-muted"><strong>Customer:</strong></td>
                                                <td><t t-esc="contract.partner_id.name"/></td>
                                            </tr>
                                            <tr>
                                                <td class="text-muted"><strong>Start Date:</strong></td>
                                                <td><t t-esc="contract.start_date" t-options='{"widget": "date"}'/></td>
                                            </tr>
                                            <tr>
                                                <td class="text-muted"><strong>End Date:</strong></td>
                                                <td><t t-esc="contract.end_date" t-options='{"widget": "date"}'/></td>
                                            </tr>
                                            <tr>
                                                <td class="text-muted"><strong>Contract Term:</strong></td>
                                                <td>
                                                    <t t-if="contract.contract_term">
                                                        <t t-esc="contract.contract_term.term"/> months
                                                    </t>
                                                    <t t-else="">N/A</t>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="text-muted"><strong>Status:</strong></td>
                                                <td>
                                                    <span t-attf-class="badge bg-#{contract.state == 'active' and 'success' or contract.state == 'renewal_due' and 'warning' or contract.state == 'terminated' and 'danger' or contract.state == 'expired' and 'secondary' or 'secondary'}">
                                                        <t t-esc="dict(contract._fields['state'].selection).get(contract.state)"/>
                                                    </span>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <h5 class="text-primary mb-3">Financial Details</h5>
                                        <table class="table table-sm">
                                            <tr>
                                                <td class="text-muted"><strong>Monthly Payment:</strong></td>
                                                <td>
                                                    <t t-if="contract.monthly_payment">
                                                        $<t t-esc="'%.2f' % contract.monthly_payment"/>
                                                    </t>
                                                    <t t-else="">N/A</t>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="text-muted"><strong>Pagare Value:</strong></td>
                                                <td>
                                                    <t t-if="contract.contract_value">
                                                        $<t t-esc="'%.2f' % contract.contract_value"/>
                                                    </t>
                                                    <t t-else="">N/A</t>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="text-muted"><strong>Paid to Date:</strong></td>
                                                <td>
                                                    <t t-if="contract.total_paid">
                                                        $<t t-esc="'%.2f' % contract.total_paid"/>
                                                    </t>
                                                    <t t-else="">$0.00</t>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td class="text-muted"><strong>Early Termination Cost (est):</strong></td>
                                                <td>
                                                    <t t-if="contract.early_termination_cost">
                                                        $<t t-esc="'%.2f' % contract.early_termination_cost"/>
                                                    </t>
                                                    <t t-else="">$0.00</t>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                </div>

                                <!-- Signed Documents Section -->
                                <t t-if="contract.signed_document_ids">
                                    <div class="row">
                                        <div class="col-12">
                                            <h5 class="text-primary mb-3">
                                                <i class="fa fa-file-pdf-o me-2"/>
                                                Signed Documents
                                            </h5>
                                            <div class="list-group">
                                                <t t-foreach="contract.signed_document_ids" t-as="document">
                                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                                        <div>
                                                            <i class="fa fa-file-pdf-o text-danger me-2"/>
                                                            <strong><t t-esc="document.name"/></strong>
                                                            <t t-if="document.create_date">
                                                                <br/>
                                                                <small class="text-muted">
                                                                    Signed on: <t t-esc="document.create_date" t-options='{"widget": "datetime"}'/>
                                                                </small>
                                                            </t>
                                                        </div>
                                                        <a t-attf-href="/my/contract/#{contract.id}/download/#{document.id}" 
                                                           class="btn btn-sm btn-primary" 
                                                           target="_blank">
                                                            <i class="fa fa-download"/> Download
                                                        </a>
                                                    </div>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                                <t t-else="">
                                    <div class="alert alert-info">
                                        <i class="fa fa-info-circle"/> No signed documents available yet.
                                    </div>
                                </t>
                            </div>
                            
                            <div class="card-footer text-end">
                                <a href="/my/services" class="btn btn-secondary">
                                    <i class="fa fa-arrow-left"/> Back to My Services
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
    
    <!-- Quote Confirmation Success Page -->
    <template id="quote_confirmed_template" name="Quote Confirmed Success">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_cover parallax s_parallax_is_fixed bg-black-50 pt96 pb96" data-vcss="001" data-snippet="s_cover" data-name="Cover">
                    <span class="s_parallax_bg oe_img_bg" style="background-image: url('/web/image/website.s_cover_default_image'); background-position: 50% 0;"/>
                    <div class="o_we_bg_filter bg-success-50"/>
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 offset-lg-2 text-center">
                                <div class="bg-white rounded shadow-lg p-5">
                                    <div class="mb-4">
                                        <i class="fa fa-check-circle text-success" style="font-size: 80px;"/>
                                    </div>
                                    <h1 class="display-4 text-success mb-3">¡Cotización Confirmada!</h1>
                                    <h2 class="h4 text-muted mb-4">Quote Confirmed Successfully</h2>
                                    
                                    <div class="alert alert-success" role="alert">
                                        <p class="mb-2"><strong>Orden:</strong> <t t-esc="order_name"/></p>
                                        <p class="mb-0"><strong>Método de Envío:</strong> <t t-esc="send_method_label"/></p>
                                    </div>
                                    
                                    <p class="lead mb-4">
                                        Hemos recibido la confirmación de su cotización. 
                                        <br/>
                                        Su contrato será procesado y enviado vía <strong><t t-esc="send_method_label"/></strong>.
                                    </p>
                                    
                                    <div class="text-muted">
                                        <p class="mb-1">
                                            <i class="fa fa-clock-o me-2"/>
                                            Recibirá su contrato para firma en las próximas horas.
                                        </p>
                                        <p class="mb-3">
                                            <i class="fa fa-info-circle me-2"/>
                                            Una vez firmado, procederemos con la instalación del servicio.
                                        </p>
                                    </div>
                                    
                                    <hr class="my-4"/>
                                    
                                    <h5 class="mb-3">¿Necesita Ayuda? / Need Help?</h5>
                                    <p class="mb-3">
                                        <i class="fa fa-phone me-2"/>
                                        <a href="tel:+50323374000" class="text-decoration-none">+503 2337 4000</a>
                                        <br/>
                                        <i class="fa fa-whatsapp me-2"/>
                                        <a href="https://wa.me/50379401214" class="text-decoration-none" target="_blank">+503 7940 1214</a>
                                        <br/>
                                        <i class="fa fa-envelope me-2"/>
                                        <a href="mailto:soporte@cabalinternet.com" class="text-decoration-none">soporte@cabalinternet.com</a>
                                    </p>
                                    
                                    <a href="https://cabalinternet.com" class="btn btn-primary btn-lg mt-3">
                                        <i class="fa fa-home me-2"/>
                                        Volver al Sitio Web / Return to Website
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
    
    <!-- Quote Rejection Error Page -->
    <template id="quote_rejected_template" name="Quote Confirmation Failed">
        <t t-call="website.layout">
            <div id="wrap" class="oe_structure oe_empty">
                <section class="s_cover parallax s_parallax_is_fixed bg-black-50 pt96 pb96" data-vcss="001" data-snippet="s_cover" data-name="Cover">
                    <span class="s_parallax_bg oe_img_bg" style="background-image: url('/web/image/website.s_cover_default_image'); background-position: 50% 0;"/>
                    <div class="o_we_bg_filter bg-danger-50"/>
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-8 offset-lg-2 text-center">
                                <div class="bg-white rounded shadow-lg p-5">
                                    <div class="mb-4">
                                        <i class="fa fa-times-circle text-danger" style="font-size: 80px;"/>
                                    </div>
                                    <h1 class="display-4 text-danger mb-3">Error al Confirmar</h1>
                                    <h2 class="h4 text-muted mb-4">Unable to Confirm Quote</h2>
                                    
                                    <div class="alert alert-danger" role="alert">
                                        <p class="mb-0"><t t-esc="error_message"/></p>
                                    </div>
                                    
                                    <t t-if="order_name">
                                        <p class="text-muted mb-3">
                                            <strong>Orden:</strong> <t t-esc="order_name"/>
                                        </p>
                                    </t>
                                    
                                    <p class="lead mb-4">
                                        No pudimos procesar su confirmación. 
                                        <br/>
                                        Por favor contacte a nuestro equipo de soporte.
                                    </p>
                                    
                                    <div class="text-muted small mb-3">
                                        <p class="mb-0">Código de Error: <code><t t-esc="reason_code"/></code></p>
                                    </div>
                                    
                                    <hr class="my-4"/>
                                    
                                    <h5 class="mb-3">Contacte Soporte / Contact Support</h5>
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <div class="card border-primary h-100">
                                                <div class="card-body">
                                                    <h6 class="card-title">
                                                        <i class="fa fa-phone me-2"/>
                                                        Por Teléfono
                                                    </h6>
                                                    <p class="card-text">
                                                        <a href="tel:+50323374000" class="text-decoration-none">
                                                            +503 2337 4000
                                                        </a>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <div class="card border-success h-100">
                                                <div class="card-body">
                                                    <h6 class="card-title">
                                                        <i class="fa fa-whatsapp me-2"/>
                                                        Por WhatsApp
                                                    </h6>
                                                    <p class="card-text">
                                                        <a href="https://wa.me/50379401214" class="text-decoration-none" target="_blank">
                                                            +503 7940 1214
                                                        </a>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <p class="mt-3 mb-3">
                                        <i class="fa fa-envelope me-2"/>
                                        <a href="mailto:soporte@cabalinternet.com" class="text-decoration-none">soporte@cabalinternet.com</a>
                                    </p>
                                    
                                    <a href="https://cabalinternet.com" class="btn btn-secondary btn-lg mt-3">
                                        <i class="fa fa-home me-2"/>
                                        Volver al Sitio Web / Return to Website
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </t>
    </template>
</odoo>
