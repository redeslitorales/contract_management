<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_dte_base_contract_tree" model="ir.actions.act_window">
            <field name="name">Contract Terms Management</field>
            <field name="res_model">dte.base.contract</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--  Define the tree view for the Manual Stock  -->
        <record id="view_dte_base_contract" model="ir.ui.view">
            <field name="name">dte.base.contract.tree</field>
            <field name="model">dte.base.contract</field>
            <field name="arch" type="xml">
                <tree>
                <!--  Define the columns you want to display in the tree view  -->
                <!--  <field name="id"/>  -->
                <field name="term"/>
                <field name="label"/>
                <field name="install_fee"/>
                </tree>
            </field>
        </record>

        <record id="view_dte_base_contract_form" model="ir.ui.view">
            <field name="name">Contract Terms Management Form</field>
            <field name="model">dte.base.contract</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                    <header>
                    </header>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <!-- <field name="name"/> -->
                            <field name="term"/>
                            <field name="label"/>
                            <field name="install_fee"/>
                        </group>
                    </group>
                    <notebook>
                    </notebook>
                    </sheet>
                </form>
            </field>
        </record>

		<!-- Define the search views -->
        <record id="dte_base_contract_view_search" model="ir.ui.view">
           <field name="name">service.view.search.dte.base.contract</field>
           <field name="model">dte.base.contract</field>
           <field name="arch" type="xml">
               <search>
                   <field name="label"/>
                   <field name="install_fee"/>
               </search>
           </field>
        </record>
    </data>
</odoo>