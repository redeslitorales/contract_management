<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add next_invoice_date field to sale.order form in Other Info tab -->
    <record id="view_sale_order_next_invoice_date" model="ir.ui.view">
        <field name="name">sale.order.form.next.invoice.date</field>
        <field name="model">sale.order</field>
        <field name="priority" eval="99"/>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Find Other Info tab and add next_invoice_date in Subscription section -->
            <xpath expr="//page[@name='other_information']//field[@name='start_date']" position="after">
                <field name="next_invoice_date"/>
                <field name="payment_change_log_ids" readonly="1" nolabel="1">
                    <tree string="Payment Day Changes" create="false" edit="false" delete="false">
                        <field name="change_date"/>
                        <field name="previous_next_invoice_date"/>
                        <field name="new_next_invoice_date"/>
                        <field name="prorated_amount"/>
                        <field name="changed_by_id"/>
                    </tree>
                </field>
            </xpath>
            
            <!-- Make second occurrence of next_invoice_date readonly with force_save -->
            <xpath expr="//form[1]/sheet[1]/group[@name='sale_header']/group[@name='order_details']/field[@name='next_invoice_date'][2]" position="attributes">
                <attribute name="force_save">1</attribute>
                <attribute name="readonly">True</attribute>
            </xpath>
        </field>
    </record>
</odoo>
