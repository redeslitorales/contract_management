<odoo>
    <record id="view_contract_resend_wizard_form" model="ir.ui.view">
        <field name="name">contract.resend.wizard.form</field>
        <field name="model">contract.resend.wizard</field>
        <field name="arch" type="xml">
            <form string="Resend Contract">
                <group>
                    <field name="contract_id" readonly="1"/>
                    <label for="contract_id" string="Choose how you want to resend the contract." class="o_form_label"/>
                    <field name="can_sign_in_person" invisible="1"/>
                    <field name="can_send_magic_link" invisible="1"/>
                    <field name="can_resend_email" invisible="1"/>
                    <field name="can_open_portal" invisible="1"/>
                </group>
                <footer>
                    <button string="Sign in Person" type="object" name="action_sign_in_person"
                        class="btn-secondary"
                        modifiers="{'invisible': [('can_sign_in_person', '=', False)]}"/>
                    <button string="Send Magic Link" type="object" name="action_send_magic_link"
                        class="btn-secondary"
                        modifiers="{'invisible': [('can_send_magic_link', '=', False)]}"/>
                    <button string="Resend via Email" type="object" name="action_resend_email"
                        class="btn-primary"
                        modifiers="{'invisible': [('can_resend_email', '=', False)]}"/>
                    <button string="Open Portal" type="object" name="action_open_portal"
                        class="btn-secondary"
                        modifiers="{'invisible': [('can_open_portal', '=', False)]}"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
