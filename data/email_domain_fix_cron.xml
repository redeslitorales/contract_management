<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ir_cron_contract_email_domain_fix" model="ir.cron">
        <field name="name">Contracts: Fix Bad Email Domains</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="state">code</field>
        <field name="code">model.fix_bad_email_domains(limit=500, dry_run=False)</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="nextcall" eval="(DateTime.now() + relativedelta(days=1)).replace(hour=2, minute=30, second=0, microsecond=0).strftime('%Y-%m-%d %H:%M:%S')"/>
    </record>
</odoo>
